<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">
        <!-- Other components and views -->



        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            app:backgroundTint="@color/colorPrimary"
            app:fabAlignmentMode="center"
            android:elevation="4dp"
            app:hideOnScroll="true"/>
            <!--app:navigationIcon="@drawable/round_menu_black_18dp"-->
            <!--app:menu ="@menu/bottom"-->



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            app:layout_anchor="@id/bar"
            android:elevation="8dp"

            />

        <androidx.constraintlayout.widget.Placeholder
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_anchor="@id/fab"
            app:layout_anchorGravity="left"
            android:layout_margin="100dp"
            app:layout_dodgeInsetEdges="left"
            app:layout_insetEdge="left"

            />
        <androidx.constraintlayout.widget.Placeholder
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_anchor="@id/fab"
            app:layout_anchorGravity="center"
            android:layout_margin="100dp"
            app:layout_dodgeInsetEdges="right"


            />


        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            app:liftOnScroll="true">

         <!--TODO id should fall under appbar or toolbar-->
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textSize="60sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_margin="16dp"/>

            </androidx.appcompat.widget.Toolbar>
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginTop="-9dp"
                android:layout_marginBottom="-8dp"
                android:background="@color/colorPrimary"
                android:backgroundTint="@color/colorPrimary"
                android:foregroundGravity="center"
                android:foregroundTint="@android:color/white"
                android:indeterminate="true"
                android:indeterminateTint="@android:color/white"
                android:progress="20"
                android:progressBackgroundTint="@android:color/white"
                android:progressTint="@android:color/white"
                android:secondaryProgressTint="@android:color/white"
                android:visibility="visible" />
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_below="@+id/toolbar">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="24dp"

                    android:layout_marginTop="24dp"
                    android:id="@+id/news"
                    android:background="#cddc39"
                    android:elevation="2dp"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Map"
                        android:layout_margin="24dp"/>
                </androidx.cardview.widget.CardView>



                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/linear1"
                    android:layout_below="@+id/news">
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="24dp"

                        android:layout_marginTop="24dp"
                        android:id="@+id/eat"
                        android:background="#cddc39"
                        android:elevation="2dp"
                        android:layout_weight="0.7"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PLACES to Eat"
                            android:layout_margin="24dp"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="300dp"
                        android:layout_margin="24dp"
                        android:layout_weight="1"
                        android:id="@+id/gym"
                        android:background="#00bfa5"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GYMKHANA MAYBE"
                            android:layout_margin="24dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear1">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"

                        android:background="#ffd600"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gallery"
                            android:layout_margin="24dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>





    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>